<controls:MetroWindow x:Class="SurfaceDesktop.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:localization="clr-namespace:SurfaceDesktop.Resources.Localization"
                      mc:Ignorable="d"
        Title="Surface.NET" Height="350" Width="525">

    <!-- Title bar buttons -->
    <controls:MetroWindow.RightWindowCommands>
        <controls:WindowCommands>
            <!-- Settings flyout opening button -->
            <Button 
                x:Name="SettingsButton"
                Content="{x:Static localization:LocalizedStrings.SettingsButtonContent}"
                Click="SettingsButton_OnClick"
            />
        </controls:WindowCommands>
    </controls:MetroWindow.RightWindowCommands>

    <!-- Window flyouts -->
    <controls:FlyoutsControl>
        <!-- Application settings flyout -->
        <controls:Flyout x:Name="SettingsFlyout" Position="Right">

        </controls:Flyout>
    </controls:FlyoutsControl>

</controls:MetroWindow>
